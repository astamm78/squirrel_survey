<h2><%= @survey.title %></h2>
<img src="<%= @survey.image.url %>">

<form method="POST" action="/survey/response">
  <% @survey.questions.each do |question| %>
  <h3><%= question.question %></h3>
  <br>
  
  <% question.choices.each do |choice| %>
  <label><%= choice.value %>
    <input type="radio" name="question[<%=question.id%>][choice]" id="choice_id" value="<%=choice.id%>"/> 
  </label>
  <br>
  <% end %>

  <% end %>
  <input type="hidden" name="survey_id" value="<%=@survey.id%>">
  <input type="submit" id="choice_submit">
</form>

<br><br>
